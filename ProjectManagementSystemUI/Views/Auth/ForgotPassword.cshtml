@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="api-base-url" content="@ViewBag.ApiBaseUrl">
    <title>@ViewData["Title"] - Project Management System</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="login-wrapper">
        <!-- Animated Background -->
        <div class="login-background">
            <div class="bg-shape bg-shape-1"></div>
            <div class="bg-shape bg-shape-2"></div>
            <div class="bg-shape bg-shape-3"></div>
        </div>

        <!-- Forgot Password Card -->
        <div class="login-container">
            <div class="login-card">
                <!-- Logo & Header -->
                <div class="login-header">
                    <div class="logo-wrapper">
                        <div class="logo-icon">
                            <i class="bi bi-key-fill"></i>
                        </div>
                    </div>
                    <h1>Şifremi Unuttum</h1>
                    <p class="subtitle">E-posta adresinize şifre sıfırlama bağlantısı göndereceğiz</p>
                </div>

                <!-- Forgot Password Form -->
                <form id="forgotPasswordForm" class="login-form">
                    <div class="form-group">
                        <label for="email" class="form-label">
                            <i class="bi bi-envelope-fill"></i>
                            <span>E-posta Adresi</span>
                        </label>
                        <div class="input-wrapper">
                            <input 
                                type="email" 
                                class="form-control modern-input" 
                                id="email" 
                                name="email" 
                                placeholder="ornek@email.com"
                                required
                                autocomplete="email"
                            >
                            <div class="input-focus-line"></div>
                        </div>
                    </div>

                    <button type="submit" class="btn-login">
                        <span class="btn-text">Şifre Sıfırlama Bağlantısı Gönder</span>
                        <span class="btn-icon">
                            <i class="bi bi-send"></i>
                        </span>
                    </button>

                    <div class="text-center mt-3">
                        <a href="/Auth/Login" class="forgot-password-link">
                            <i class="bi bi-arrow-left"></i> Giriş Sayfasına Dön
                        </a>
                    </div>
                </form>

                <!-- Success/Error Message -->
                <div id="successMessage" class="success-message" style="display: none;"></div>
                <div id="errorMessage" class="error-message" style="display: none;"></div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- API Helper -->
    <script src="~/js/api.js"></script>
    <!-- Common Functions -->
    <script src="~/js/common.js"></script>
    <!-- Forgot Password Script -->
    <script src="~/js/forgot-password.js"></script>
</body>
</html>
