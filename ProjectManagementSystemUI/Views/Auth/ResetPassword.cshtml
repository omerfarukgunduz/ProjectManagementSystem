@{
    ViewData["Title"] = "Şifre Sıfırla";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="api-base-url" content="@ViewBag.ApiBaseUrl">
    <title>@ViewData["Title"] - Project Management System</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="login-wrapper">
        <!-- Animated Background -->
        <div class="login-background">
            <div class="bg-shape bg-shape-1"></div>
            <div class="bg-shape bg-shape-2"></div>
            <div class="bg-shape bg-shape-3"></div>
        </div>

        <!-- Reset Password Card -->
        <div class="login-container">
            <div class="login-card">
                <!-- Logo & Header -->
                <div class="login-header">
                    <div class="logo-wrapper">
                        <div class="logo-icon">
                            <i class="bi bi-shield-lock-fill"></i>
                        </div>
                    </div>
                    <h1>Şifre Sıfırla</h1>
                    <p class="subtitle">Yeni şifrenizi belirleyin</p>
                </div>

                <!-- Reset Password Form -->
                <form id="resetPasswordForm" class="login-form">
                    <input type="hidden" id="token" value="@ViewBag.Token">
                    <input type="hidden" id="email" value="@ViewBag.Email">

                    <div class="form-group">
                        <label for="newPassword" class="form-label">
                            <i class="bi bi-lock-fill"></i>
                            <span>Yeni Şifre</span>
                        </label>
                        <div class="input-wrapper">
                            <input 
                                type="password" 
                                class="form-control modern-input" 
                                id="newPassword" 
                                name="newPassword" 
                                placeholder="Yeni şifrenizi girin"
                                required
                                autocomplete="new-password"
                                minlength="6"
                            >
                            <button 
                                class="password-toggle" 
                                type="button" 
                                id="togglePassword"
                                aria-label="Şifreyi göster/gizle"
                            >
                                <i class="bi bi-eye" id="eyeIcon"></i>
                            </button>
                            <div class="input-focus-line"></div>
                        </div>
                        <small class="form-text text-muted">Şifre en az 6 karakter olmalıdır.</small>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword" class="form-label">
                            <i class="bi bi-lock-fill"></i>
                            <span>Şifre Tekrar</span>
                        </label>
                        <div class="input-wrapper">
                            <input 
                                type="password" 
                                class="form-control modern-input" 
                                id="confirmPassword" 
                                name="confirmPassword" 
                                placeholder="Şifrenizi tekrar girin"
                                required
                                autocomplete="new-password"
                                minlength="6"
                            >
                            <div class="input-focus-line"></div>
                        </div>
                    </div>

                    <button type="submit" class="btn-login">
                        <span class="btn-text">Şifremi Sıfırla</span>
                        <span class="btn-icon">
                            <i class="bi bi-check-circle"></i>
                        </span>
                    </button>

                    <div class="text-center mt-3">
                        <a href="/Auth/Login" class="forgot-password-link">
                            <i class="bi bi-arrow-left"></i> Giriş Sayfasına Dön
                        </a>
                    </div>
                </form>

                <!-- Success/Error Message -->
                <div id="successMessage" class="success-message" style="display: none;"></div>
                <div id="errorMessage" class="error-message" style="display: none;"></div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- API Helper -->
    <script src="~/js/api.js"></script>
    <!-- Common Functions -->
    <script src="~/js/common.js"></script>
    <!-- Reset Password Script -->
    <script src="~/js/reset-password.js"></script>
</body>
</html>
