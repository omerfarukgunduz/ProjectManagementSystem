@{
    ViewData["Title"] = "Proje Detayları";
    Layout = "_Layout";
}

<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h2 class="mb-0">
            <i class="bi bi-folder text-primary"></i> Proje Detayları
        </h2>
        <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Geri Dön
        </a>
    </div>
</div>

<input type="hidden" id="projectId" value="@ViewBag.ProjectId">

<!-- Project Info Card -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-info-circle"></i> Proje Bilgileri
        </h5>
    </div>
    <div class="card-body">
        <div id="projectInfoLoading" class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
        <div id="projectInfo" style="display: none;">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <strong><i class="bi bi-folder"></i> Proje Adı:</strong>
                    <p class="mb-0" id="projectName">-</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="bi bi-calendar"></i> Oluşturulma Tarihi:</strong>
                    <p class="mb-0" id="projectCreatedDate">-</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12 mb-3">
                    <strong><i class="bi bi-file-text"></i> Açıklama:</strong>
                    <p class="mb-0" id="projectDescription">-</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12 mb-3">
                    <strong><i class="bi bi-people"></i> Atanan Kullanıcılar:</strong>
                    <p class="mb-0" id="projectUsers">-</p>
                </div>
            </div>
        </div>
        <div id="projectError" class="alert alert-danger" style="display: none;"></div>
    </div>
</div>

<!-- Tasks Card -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-list-task"></i> Görevler
        </h5>
        <a id="addTaskBtn" href="#" class="btn btn-sm btn-primary" style="display: none;">
            <i class="bi bi-plus-circle"></i> Görev Ekle
        </a>
    </div>
    <div class="card-body">
        <div id="tasksLoading" class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
        <div id="tasksContent" style="display: none;">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th class="text-dark fw-bold"><i class="bi bi-hash"></i> ID</th>
                            <th class="text-dark fw-bold"><i class="bi bi-card-heading"></i> Başlık</th>
                            <th class="text-dark fw-bold"><i class="bi bi-file-text"></i> Açıklama</th>
                            <th class="text-dark fw-bold"><i class="bi bi-flag"></i> Durum</th>
                            <th class="text-dark fw-bold"><i class="bi bi-exclamation-triangle"></i> Öncelik</th>
                            <th class="text-dark fw-bold"><i class="bi bi-people"></i> Atanan Kullanıcılar</th>
                            <th class="text-dark fw-bold"><i class="bi bi-calendar"></i> Oluşturulma Tarihi</th>
                        </tr>
                    </thead>
                    <tbody id="tasksTableBody">
                    </tbody>
                </table>
            </div>
        </div>
        <div id="tasksError" class="alert alert-danger" style="display: none;"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/project-detail.js" asp-append-version="true"></script>
}
