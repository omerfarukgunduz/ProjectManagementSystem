@{
    ViewData["Title"] = "Proje Düzenle";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi bi-pencil-square"></i> Proje Düzenle
                </h4>
            </div>
            <div class="card-body">
                <form id="editProjectForm">
                    <input type="hidden" id="projectId" value="@ViewBag.ProjectId">
                    <div id="formError" class="alert alert-danger" style="display: none;"></div>

                    <div class="mb-3">
                        <label for="name" class="form-label">
                            <i class="bi bi-folder"></i> Proje Adı <span class="text-danger">*</span>
                        </label>
                        <input
                            type="text"
                            class="form-control"
                            id="name"
                            name="name"
                            placeholder="Proje adını girin"
                            required
                        />
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">
                            <i class="bi bi-file-text"></i> Açıklama
                        </label>
                        <textarea
                            class="form-control"
                            id="description"
                            name="description"
                            rows="4"
                            placeholder="Proje açıklamasını girin"
                        ></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="userIds" class="form-label">
                            <i class="bi bi-people"></i> Kullanıcılar
                        </label>
                        <select
                            class="form-select"
                            id="userIds"
                            name="userIds"
                            multiple
                            size="5"
                        >
                            <option value="">Kullanıcılar yükleniyor...</option>
                        </select>
                        <small class="form-text text-muted">
                            Birden fazla kullanıcı seçmek için Ctrl (Windows) veya Cmd (Mac) tuşuna basılı tutun.
                        </small>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Güncelle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/edit-project.js" asp-append-version="true"></script>
}
