@{
    ViewData["Title"] = "Projeler";
    Layout = "_Layout";
}

<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h2 class="mb-0">
            <i class="bi bi-folder text-primary"></i> Projeler
        </h2>
        <a
            asp-controller="Projects"
            asp-action="Add"
            class="btn btn-primary admin-only"
            id="addProjectLink"
            style="display: none;"
        >
            <i class="bi bi-plus-circle"></i> Yeni Proje
        </a>
    </div>
</div>

<!-- Projects Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-table"></i> Projeler Listesi
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th class="text-dark fw-bold"><i class="bi bi-hash"></i> ID</th>
                        <th class="text-dark fw-bold"><i class="bi bi-folder"></i> Proje Adı</th>
                        <th class="text-dark fw-bold"><i class="bi bi-file-text"></i> Açıklama</th>
                        <th class="text-dark fw-bold"><i class="bi bi-people"></i> Kullanıcılar</th>
                        <th class="text-dark fw-bold"><i class="bi bi-calendar"></i> Oluşturulma Tarihi</th>
                        <th class="text-end text-dark fw-bold"><i class="bi bi-gear"></i> İşlemler</th>
                    </tr>
                </thead>
                <tbody id="projectsTableBody">
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Yükleniyor...</span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Projeyi Sil</h5>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                ></button>
            </div>
            <div class="modal-body">
                <p>Bu projeyi silmek istediğinizden emin misiniz?</p>
                <p class="text-muted">
                    <strong id="deleteProjectName"></strong> adlı proje kalıcı olarak
                    silinecektir.
                </p>
            </div>
            <div class="modal-footer">
                <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                >
                    İptal
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    Sil
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/projects.js" asp-append-version="true"></script>
}
