@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi bi-pencil-square"></i> Kullanıcı Düzenle
                </h4>
            </div>
            <div class="card-body">
                <form id="editUserForm">
                    <input type="hidden" id="userId" value="@ViewBag.UserId">
                    <div id="formError" class="alert alert-danger" style="display: none;"></div>

                    <div class="mb-3">
                        <label for="username" class="form-label">
                            <i class="bi bi-person"></i> Kullanıcı Adı <span class="text-danger">*</span>
                        </label>
                        <input
                            type="text"
                            class="form-control"
                            id="username"
                            name="username"
                            placeholder="Kullanıcı adını girin"
                            required
                            autocomplete="username"
                        />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">
                            <i class="bi bi-envelope"></i> E-posta <span class="text-danger">*</span>
                        </label>
                        <input
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            placeholder="ornek@email.com"
                            required
                            autocomplete="email"
                        />
                    </div>

                    <div class="mb-4">
                        <label for="roleId" class="form-label">
                            <i class="bi bi-shield-check"></i> Rol <span class="text-danger">*</span>
                        </label>
                        <select class="form-select" id="roleId" name="roleId" required>
                            <option value="">Yükleniyor...</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-controller="Users" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Güncelle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/edit-user.js" asp-append-version="true"></script>
}
