<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="api-base-url" content="@ViewBag.ApiBaseUrl">
    <title>@ViewData["Title"] - Project Management System</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">
                <i class="bi bi-kanban-fill text-primary"></i> Project Management
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="Index" id="navDashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Projects" asp-action="Index" id="navProjects">
                            <i class="bi bi-folder"></i> Projeler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Tasks" asp-action="Index" id="navTasks">
                            <i class="bi bi-list-check"></i> Görevler
                        </a>
                    </li>
                    <li class="nav-item admin-only" style="display: none;">
                        <a class="nav-link" asp-controller="Users" asp-action="Index" id="navUsers">
                            <i class="bi bi-people"></i> Kullanıcılar
                        </a>
                    </li>
                    <li class="nav-item admin-only" style="display: none;">
                        <a class="nav-link" asp-controller="Settings" asp-action="Smtp" id="navSettings">
                            <i class="bi bi-gear"></i> Sistem Ayarları
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> <span class="navbar-username">Kullanıcı</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#" onclick="logout(); return false;">
                                <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- API Helper -->
    <script src="~/js/api.js" asp-append-version="true"></script>
    <!-- Common Functions -->
    <script src="~/js/common.js" asp-append-version="true"></script>
    <script>
        // Set active nav link based on current controller
        document.addEventListener('DOMContentLoaded', function() {
            const controller = '@ViewContext.RouteData.Values["controller"]';
            const navLinks = {
                'Dashboard': document.getElementById('navDashboard'),
                'Projects': document.getElementById('navProjects'),
                'Tasks': document.getElementById('navTasks'),
                'Users': document.getElementById('navUsers'),
                'Settings': document.getElementById('navSettings')
            };
            
            if (navLinks[controller]) {
                navLinks[controller].classList.add('active');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
